@model AuthMvc.Models.TaskItem

<h1>Details</h1>

<div>
    <h4>TaskItem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Titre
        </dt>
        <dd class = "col-sm-10">
            @Model.Titre
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            DateEcheance
        </dt>
        <dd class = "col-sm-10">
            @Model.DateEcheance
        </dd>
        <dt class = "col-sm-2">
            Statut
        </dt>
        <dd class = "col-sm-10">
            @Model.Statut
        </dd>
        <dt class = "col-sm-2">
            Priorite
        </dt>
        <dd class = "col-sm-10">
            @Model.Priorite
        </dd>
        <dt class = "col-sm-2">
            Owner
        </dt>
        <dd class = "col-sm-10">
            @Model.Owner?.UserName
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<form asp-action="UploadFile" asp-controller="TaskItems" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="file" name="file" />
    <button type="submit">Uploader le fichier</button>
</form>

@if (!string.IsNullOrEmpty(Model.CheminFichier))
{
    <p> Fichier : <a href="/@Model.CheminFichier" target="_blank">Télécharger</a></p>
}
